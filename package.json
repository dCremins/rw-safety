{
  "name": "road-work-safety",
  "productName": "RoadWorkSafety",
  "version": "2.0.0",
  "description": "My scrumtrulescent app",
  "license": "MIT",
  "repository": "dcremins/road-work-safety",
  "author": {
    "name": "Devin Cremins",
    "email": "drcremin@ncsu.edu",
    "url": "octopusoddments.com"
  },
  "main": "app/app.js",
  "scripts": {
    "test": "xo",
    "start": "gulp compile",
    "pack": "electron-builder --dir",
    "dist": "gulp bundle && electron-builder --publish=always -mwl",
    "build": "electron-packager . --out=dist --asar --overwrite --all"
  },
  "build": {
    "appId": "itre.road.work.safety",
    "mac": {
      "category": "your.app.category.type"
    },
    "files": [
      "**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      "includes/images/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "three": "^0.87.1",
    "three-orbit-controls-loader": "^1.0.1",
    "three-trackballcontrols": "^0.0.6"
  },
  "devDependencies": {
    "devtron": "^1.1.0",
    "electron": "^1.3.3",
    "electron-builder": "^19.37.2",
    "electron-debug": "^1.0.0",
    "electron-packager": "^8.0.0",
    "electron-reload": "^1.2.2",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "gulp-uglify-es": "^0.1.3",
    "gulp-uglifyes": "^0.1.2",
    "pump": "^1.0.2",
    "stats.js": "^0.17.0",
    "uglify-es": "^3.1.3",
    "uglify-js": "^3.1.4",
    "xo": "^0.18.2"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "no-unused-vars": false,
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "app/includes/**/*",
      "development/**/*"
    ],
    "no-unassigned-import": "allow"
  }
}
