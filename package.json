{
  "name": "road-work-safety",
  "productName": "RoadWorkSafety",
  "description": "Instructional Application for use with the ITRE Road Work Safety Training Course",
  "version": "1.0.0",
  "author": "Devin Cremins <drcremin@ncsu.edu>",
  "homepage": "http://octopusoddments.com",
  "license": "MIT",
  "main": "app/app.js",
  "scripts": {
    "test": "xo",
    "release": "gulp bundle && build",
    "start": "gulp compile",
    "pack": "electron-builder --dir",
    "dist": "gulp bundle && electron-builder --publish=always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dCremins/rw-safety.git"
  },
  "build": {
    "appId": "itre.road.work.safety",
    "mac": {
      "category": "your.app.category.type"
    },
    "publish": {
      "provider": "github",
      "owner": "dCremins",
      "repo": "rw-safety",
      "private": false
    },
    "files": [
      "**/*",
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "keywords": [
    "electron-app",
    "electron"
  ],
  "dependencies": {
    "three": "^0.87.1"
  },
  "devDependencies": {
    "electron": "^1.3.3",
    "electron-builder": "^19.40.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-htmlmin": "^3.0.0",
    "gulp-imagemin": "^3.4.0",
    "gulp-optimize-js": "^1.1.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-uglify": "^3.0.0",
    "gulp-util": "^3.0.8",
    "require-dir": "^0.3.2",
    "uglify-es": "^3.1.5",
    "xo": "^0.18.2"
  },
  "xo": {
    "esnext": true,
    "semicolon": false,
    "no-unused-vars": false,
    "envs": [
      "node",
      "browser"
    ],
    "ignores": [
      "development/**/*",
      "**/*.html"
    ],
    "no-unassigned-import": "allow",
    "'capitalized'-comments": "off",
    "spaced-comment": "off"
  }
}
